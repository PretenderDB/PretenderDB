<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Set pretenderdb CLI to INFO level -->
    <logger name="io.github.pretenderdb.cli" level="INFO"/>

    <!-- Set pretender library to WARN level (less verbose) -->
    <logger name="io.github.pretenderdb" level="WARN"/>
</configuration>
